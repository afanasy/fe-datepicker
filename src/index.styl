.Datepicker
  font-size 13px
  display inline
  .label
    display inline-block
    margin-right 10px
    vertical-align: middle;
  .container
    display inline-block
    position relative
    vertical-align middle
    border-radius 4px
    box-shadow inset 0 2px 2px #e9e9e9
    border 1px solid #aeaeae
    overflow hidden
    >div
      display flex
      >div
        display inline-block
        &:first-child
          width 90px
          input
            border-right none
        &:last-child
          flex 1
          input
            border-right 1px solid #ccc
        input
          &:disabled
            color #ccc
            cursor no-drop
          border 1px solid #ccc
          line-height 34px
          height 34px
          padding-left 10px
          width 100%
        .timeInput
          border-left none
          padding-left 0
          padding-right 10px
  .outer
    position relative
  .clearButton
    cursor pointer
    background #2c97e8
    color #fff
    position absolute
    display inline-block
    width 1.7em
    height 1.7em
    line-height 1.7
    vertical-align middle
    text-align center
    border-radius 50%
    top -0.3em
    right 5px
